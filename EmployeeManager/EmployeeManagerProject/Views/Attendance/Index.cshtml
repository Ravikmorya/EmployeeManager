@model EmployeeManagerProject.Models.AttendanceViewModel
@{
    ViewData["Title"] = "Home Page";
}

@*<ejs-calendar id="calendar"></ejs-calendar>*@
@using (Html.BeginForm("Index", "Attendance", FormMethod.Post))
{
    <div class="form-group" >
        <label asp-for="AttendanceDate" class="col-md-4 control-label"></label>
        <input asp-for="AttendanceDate" class="form-control">
        <br /><br />
        <fieldset class="form-group">
            <div class="row">
                <label class="col-sm-2 col-form-label text-right">Text1</label>
                <div class="col-sm-10">
                    <div class="mt-2" id="myDIV">
                        <div class="form-check form-check-inline">
                            <input class="btn active" hidden name="Present" asp-for="Present" type="submit" value="true" />
                            <label class="btn active" onclick="btns" asp-for="Present">Present</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="btn" hidden name="HalfDay" asp-for="HalfDay" type="submit" value="true" />
                            <label class="btn" onclick="btns" asp-for="HalfDay">HalfDay</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" hidden name="Leave" asp-for="Leave" type="submit" value="true" />
                            <label class="btn" onclick="btns" asp-for="Leave">Leave</label>
                        </div>
                    </div>
                    <span asp-validation-for="Present" class="text-danger"></span>
                </div>
            </div>
        </fieldset>

        @*    <input type="submit" value="Submit" />*@
    </div>
}

